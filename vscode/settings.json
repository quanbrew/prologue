{
    "editor.multiCursorModifier": "alt",
    "editor.minimap.enabled": false,
    "editor.fontFamily": "'Sarasa Mono SC', Iosevka",
    "editor.fontSize": 15,
    "editor.fontLigatures": true,
    "terminal.integrated.shell.osx": "/usr/local/bin/fish",
    "terminal.integrated.automationShell.osx": "/bin/sh",
    "terminal.integrated.automationShell.linux": "/bin/sh",
    "[plaintext]": {
        "editor.fontLigatures": false
    },
    "[javascript]": {
        "editor.fontLigatures": "'JSPT'"
    },
    "[typescript]": {
        "editor.fontLigatures": "'JSPT'"
    },
    "[swift]": {
        "editor.fontLigatures": "'SWFT'"
    },
    "[php]": {
        "editor.fontLigatures": "'PHPX'"
    },
    "[idris]": {
        "editor.fontLigatures": "'IDRS'"
    },
    "[haskell]": {
        "editor.fontLigatures": "'HSKL'"
    },
    "[elm]": {
        "editor.fontLigatures": "'ELMX'"
    },
    "[purescript]": {
        "editor.fontLigatures": "'PURS'"
    },
    "[fsharp]": {
        "editor.fontLigatures": "'FSHP'"
    },
    "vim.leader": "<space>",
    "vim.useSystemClipboard": true,
    "vim.incsearch": true,
    "vim.hlsearch": true,
    "vim.sneak": true,
    "vim.sneakReplacesF": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-e>": false,
        "<C-f>": false,
        "<C-b>": false,
        "<C-n>": false,
        "<C-p>": false
    },
    "workbench.colorTheme": "Night Owl",
    "open-in-vim.useNeovim": true
}
